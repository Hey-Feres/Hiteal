css:
  .body-wrap{
    width: 100%;
    height: 100%;
    top: 0;
    position: fixed;
    background: rgba(0,0,0,0.2);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
  }
  h2{
    font-weight: 200;
  }
  header{
    display: none;
  }
  .box{
    width: 25%;
    border-radius: 20px;
    background: rgba(255,255,255,1);
    height: 430px;
  }
  .wrap1{
    height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .wrap2{
    height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .wrap3{
    height: 100px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }
