    background: transparent !important;
    width: 90%;
    margin: 0 5% 10% 5%;
    padding: 2% 0 1% 0;
    border-bottom: 1px solid #ccc !important;
    font-weight: 300;
    border-radius: 0;
  }
  input[type="submit"]{
    border: none;
    background: var(--blue);
    width: 90%;
    margin: 0 5% 0 5%;
    padding: 2% 0;
    border-radius: 10px;
    color: #fff;
    font-weight: 300;
  }
  input[type="submit"]:hover{
    opacity: 90%
  }
  input[type="email"]:focus, input[type="password"]:focus{
