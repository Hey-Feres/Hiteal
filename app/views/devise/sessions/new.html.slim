= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .body-wrap.d-flex.justify-content-center
    .box
      .wrap1
        h2.text-center Log in
      .wrap2
        .field
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"
        .field
          = f.password_field :password, autocomplete: "current-password", class: "", id: "password-field", placeholder: "Senha"
      .wrap3
        = f.submit "Acessar", id: "login-submit"
        .mt-2
        = link_to "Cadastrar", new_registration_path(resource_name)


