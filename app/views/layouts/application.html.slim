doctype html
html
  head
    meta content=("text/html; charset=UTF-8") http-equiv="Content-Type"
    title Hiteal
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://maps.googleapis.com/maps/api/js?key='+Rails.application.credentials.google_maps_api_key 
    = yield(:head_tags)
  body
    = render 'layouts/header'
    .main-wrapper
        = yield
    - if notice
        .notice-box.blurredBg
            p.notice= notice
    p.alert= alert
    //= render './ui/components/loader', size: 'large'
css:
    body{ background-image: url("https://macmagazine.uol.com.br/wp-content/uploads/2020/03/19-wallpaper-ipad-pro-2-1260x946.jpg");}
    .main-wrapper{
        padding-top: 70px; /* 70 px Ã© a altura do header */
        /*border: 5px solid #ccc;*/
        position: absolute;
        height: 100%;
        width: 100%;
        bottom: 0;
        left: 0;
    }
    .notice-box{
        position: fixed;
        top: 90px; /*Altura do header e de 70px, adicionamos uma distancia de 20 px abaixo do header*/
        right: 1%;
        background: rgba(204, 204, 204,0.2);
        border-radius: 15px;
        width: auto;
        min-width: 200px;
        height: 50px;
        z-index: 9999;
    }
    .notice{
        line-height: 50px;
        text-align: center;
        font-weight: 500;
        color: #555;
    }
javascript:
    $(document).ready(function(){
        setTimeout(function(){ 
            $(".notice-box").addClass("animated fadeOutRight")
            setTimeout(function(){ 
                $(".notice-box").removeClass()
                $(".notice-box").hide()
            }, 750);
        }, 3000);
    })
