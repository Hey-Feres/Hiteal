.d-flex.justify-content-center
	button type="#{type}" id="#{id}" class="#{style}"= value

css:
	.default{
		width: 70%;
		background: var(--blue);
		border: none;
		color: white;
		border-radius: 10px;
		padding: 1.5% 0;
	}
	.default-red{
		width: 70%;
		background: var(--red);
		border: none;
		color: white;
		border-radius: 10px;
		padding: 1.5% 0;
	}
	.blue{
		width: auto;
		background: transparent;
		border: none;
		color: var(--blue);
		padding: 1.5% 0;
	}
	.red{
		width: auto;
		background: transparent;
		border: none;
		color: var(--red);
		padding: 1.5% 0;
	}
	.red:hover{ color: var(--dark-red) } 
	.blue:hover{ color: var(--dark-blue) }