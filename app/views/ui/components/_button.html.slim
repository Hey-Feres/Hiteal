button type="#{type}" id="#{id}" class="#{style}"= value

css:
	.default{
		width: 70%;
		margin-left: 15%;
		background: var(--blue);
		border: none;
		color: white;
		border-radius: 10px;
		padding: 1.5% 0;
	}
	.default-red{
		width: 70%;
		margin-left: 15%;
		background: var(--red);
		border: none;
		color: white;
		border-radius: 10px;
		padding: 1.5% 0;
	}
	.blue{
		width: 70%;
		margin-left: 15%;
		background: transparent;
		border: none;
		color: var(--blue);
		padding: 1.5% 0;
	}		
	.red{
		width: 70%;
		margin-left: 15%;
		background: transparent;
		border: none;
		color: var(--red);
		padding: 1.5% 0;
	}	