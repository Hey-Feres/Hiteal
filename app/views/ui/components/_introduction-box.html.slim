.intro-wrapper
	.intro
		.intro-aligner
			h2= dados[:title]
			.intro-items-box
				- dados[:icons].each do |i|
					- if i[:first_icon]
						.d-flex.justify-content-start.mb-5.mt-5
							= render "./ui/icons/#{i[:name]}", size: i[:size], color: i[:color]
							h6= i[:description]
					- else
						.d-flex.justify-content-start.mb-5
							= render "./ui/icons/#{i[:name]}", size: i[:size], color: i[:color]
							h6= i[:description]
			center.mt-3
				button.btn.btn-primary.w-75#button-dismiss= dados[:button_text]
javascript:
	$("#button-dismiss").click(function(){
		$(".intro").addClass("animated bounceOut")
		setTimeout(function(){
			$(".intro-wrapper").hide()
		}, 750); // 750 Ã© a duracao da animacao bouceOut
	})
css:
	.intro-wrapper{
		position: fixed;
		top: 0;
		left:  0;
		width: 100%;
		height: 100%;
		z-index: 999999;
		background: rgba(204, 204, 204,0.4);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		-o-backdrop-filter: blur(20px);
		-moz-backdrop-filter: blur(20px);
		-ms-backdrop-filter: blur(20px);
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.intro{
		width: 30%;
		background: white;
		height: 500px;
		box-shadow: 1px 2px 10px 1px rgba(0,0,0,.05);
		border-radius: 20px;
		padding: 2% 2%;
	}
	.intro h2{
		color: #555;
	}
	.intro-aligner{
		width: 100%; 
		height: 400px;
	}
	.intro-items-box{
		width: 100%;
		height: 280px;
		margin-top: 20px;
	}
	.intro-items-box h6{
		height: 40px;
		padding-top: 10px;
		margin-left: 2%;
	}
	@-moz-document url-prefix() {
		.intro-wrapper{
			background: rgba(255,255,255,.99);
		}
		.intro{
			box-shadow: 1px 2px 10px 1px rgba(0,0,0,0.15);
		}
	}