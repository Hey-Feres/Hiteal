/#notificacao
	.notificacao-header
		p#notificacao-title
	.notificacao-body
		p#notificacao-content

	css:
		.notificacao{
			position: fixed;
			z-index: 9999;
			top: 30;
			right: 0;
			margin: 0 1%;
			width: 250px;
			height: 100px;
			border-radius: 15px;
			background: var(--gray6);;
			box-shadow: 1px 2px 10px 1px rgba(0,0,0,0.2);
			overflow: hidden;
		}
		.notificacao-header{
			height: 30px;
			width: 100%;
			background: var(--gray5);
			padding: 0 5%;
		}
		.notificacao-header p {
			line-height: 30px;
		}
		.notificacao-body{
			padding: 3% 5%;
		}		