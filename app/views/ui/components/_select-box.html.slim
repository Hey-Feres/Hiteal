/{:label=>"Sexo", :select_id=>"aluno-editar-sexo", :options=>[{:title=>"Masculino", :value=>"0"}, {:title=>"Feminino", :value=>"1"}]}
.d-flex.justify-content-start
	label= input[:label]
	input.select-input placeholder="Teste" id="teste"
.d-flex.justify-content-start#select-box
	.organizer
	ul#select
		- input[:options].each do |option|
			li.item id="#{option[:id]}" value="#{option[:value]}"= option[:title]

javascript:
	$("#select").hide()
	$(function(){ 
		$(".select-input").hover(function(){ 
			$("#select").show() 
		}, function(){ 
			$("#select").hover(function(){ 
				$("#select").show() 
			}, function(){ 
				$("#select").hide() 
			}, function(){ 
				$("#select").hide() 
			}) 
		})
	});
	$(".item").click(function(){
		var id = $(this).attr('id');
		$(".select-input").val(id);
		let selected = $(this).attr('value');
	})
css:
	input{
		border: none;
		background: transparent !important;
		width: 80%;
		padding: 0 2%;
		border-bottom: 1px solid #f2f2f2 !important;
		border-radius: 10px;
	}
	label,.organizer{
		width: 20%;
		padding: 0 2%;
		font-size: 1em;
	}	
	#select{
		list-style: none;
		border: 1px solid #f2f2f2;
		width: 80%;
		padding: 0 0;
		border-bottom-left-radius: 10px;
		border-bottom-right-radius: 10px;
		background: #fff;
		box-shadow: 1px 2px 10px 1px #ccc;
	}
	.item{
		padding: 1% 2%;
		border-bottom: 1px solid #f2f2f2;
	}
	.item:hover{
		background: #f2f2f2;
	}
	.last{
		border-bottom: none !important;
	}
	.last:hover{
		border-bottom-left-radius: 10px;
		border-bottom-right-radius: 10px;
	}
