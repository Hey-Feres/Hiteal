.sidebar.blurredBg
	.sidebar-header
		.d-flex.justify-content-start
			/img src="#{dados[:img]}"
			.img-wrapper
				img#logo src="#{dados[:img]}"
				/= image_tag("Bubbles_2.png", id: "logo")
			h4.sidebar-title= dados[:title]
	.sidebar-content
		.sidebar-list-wrapper
			- dados[:list_items].each do |item|
				- if item[:first_item]
					.sidebar-item.first-item id="#{item[:id]}"
						h5= link_to item[:title], item[:url]
				- elsif item[:last_item]
					.sidebar-item.last-item id="#{item[:id]}"
						h5= link_to item[:title], item[:url]
				- else
					.sidebar-item id="#{item[:id]}"
						h5= link_to item[:title], item[:url]

css:
	.sidebar{
		width: 20%;
		position: fixed;
		height: 100%;
		bottom: 0;
		left: 0;
		z-index: 99;
		background: rgba(204, 204, 204,0.4);
		padding-top: 70px; /* 70 px Ã© a altura do header */
	}
	.sidebar-header{
		width: 100%;
		background: white;
		height: 70px;
		margin: 10% 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.sidebar-header .img-wrapper{
		width: 50px;
		height: 50px;
		background: #ccc;
		margin-top: 10px;
		margin-right: 5%;
		margin-left: 5%;
		border-radius: 50%;
		overflow: hidden;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	#logo{
		width: 50px;
		height: 50px;
	}
	.sidebar-header h4{
		line-height: 70px;
	}
	.sidebar-list-wrapper{
		background: white;
		border-radius: 20px;
		width: 95%;
		margin: 0 2.5%;
	}
	.sidebar-item{
		height: 50px;
		border-bottom: 1px solid #ccc;
	}
	.sidebar-item:hover{
		background: #f2f2f2;
	}
	.last-item:hover{
		border-bottom-left-radius: 20px;
		border-bottom-right-radius: 20px;
	}
	.first-item:hover{
		border-top-left-radius: 20px;
		border-top-right-radius: 20px;
	}	
	.sidebar-item a{
		color: #666;
		line-height: 50px;
		margin: 0 5%;
	}
	.sidebar-item a:hover{
		text-decoration: none;
	}
	.last-item{
		border: none !important;
	}
	.logo-select-box{
		width: 95%;
		height: 200px;
		background: white;
		border-radius: 20px;
		margin: 0 2.5% 5% 2.5%;
		padding: 4%;
	}
	.logo-select-box h5{
		color:#333;
	}
	.logo-img{
		width: 60px;
		height: 60px;
		border-radius: 50%;
	}
	.logo-img:hover{
		cursor: pointer;
		width: 63px;
		height: 63px;		
	}
	@-moz-document url-prefix() {
		.sidebar{
			background: rgba(255,255,255,.9);
		}
	}