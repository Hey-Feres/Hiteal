.sidebar
	.sidebar-header
		.d-flex.justify-content-start
			img src="#{dados[:img]}"
			h4.text-white.sidebar-title= dados[:title]
	.sidebar-content
		.sidebar-list-wrapper
			- dados[:list_items].each do |item|
				- if item[:first_item]
					.sidebar-item.first-item id="#{item[:id]}"
						h5= link_to item[:title], item[:url]
				- elsif item[:last_item]
					.sidebar-item.last-item id="#{item[:id]}"
						h5= link_to item[:title], item[:url]
				- else
					.sidebar-item id="#{item[:id]}"
						h5= link_to item[:title], item[:url]

css:
	.sidebar{
		width: 20%;
		position: fixed;
		height: 100%;
		bottom: 0;
		left: 0;
		z-index: 99;
		background: #888;
		padding-top: 70px; /* 70 px Ã© a altura do header */
	}
	.sidebar-header{
		width: 100%;
		background: #999;
		height: 70px;
		margin: 10% 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.sidebar-header img{
		width: 50px;
		height: 50px;
		margin-top: 10px;
		margin-right: 5%;
		margin-left: 5%;
		border-radius: 50%;
	}
	.sidebar-header h4{
		line-height: 70px;
	}
	.sidebar-list-wrapper{
		background: white;
		border-radius: 20px;
		width: 95%;
		margin: 0 2.5%;
	}
	.sidebar-item{
		height: 50px;
		border-bottom: 1px solid #ccc;
	}
	.sidebar-item:hover{
		background: #f2f2f2;
	}
	.last-item:hover{
		border-bottom-left-radius: 20px;
		border-bottom-right-radius: 20px;
	}
	.first-item:hover{
		border-top-left-radius: 20px;
		border-top-right-radius: 20px;
	}	
	.sidebar-item a{
		color: #666;
		line-height: 50px;
		margin: 0 5%;
	}
	.sidebar-item a:hover{
		text-decoration: none;
	}
	.last-item{
		border: none !important;
	}						