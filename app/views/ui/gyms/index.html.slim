= render './ui/components/sidebar', dados: @sidebar_items

.content
	.divider.dados-gym#wrapperDados
		.divider-header.d-flex.justify-content-between
			h3 Dados da Gym
		.divider-content
			form
				.d-flex.justify-content-between
					input type="text" placeholder="Nome da Gym" id="gym-nome" value="#{@gym.nome}"
					/= render './ui/components/loader', size: 'small'
				br
				.d-flex.justify-content-between
					input type="text" placeholder="Razão Social" id="razao-social" value="#{@gym.razao_social}"
					/= render './ui/components/loader', size: 'small'
				br
				.d-flex.justify-content-between
					input type="text" placeholder="CNPJ" id="cnpj" value="#{@gym.cnpj}"
					/= render './ui/components/loader', size: 'small'
	
	.divider#wrapperEndereco
		.divider-header
			h3 Endereço
		.divider-content
			form
				input type="text" placeholder="Cidade" id="cidade"
				br
				input type="text" placeholder="Estado" id="estado"
				br
				input type="text" placeholder="CEP" id="cep"
				br
				input type="text" placeholder="Numero" id="numero"
				br			
				input type="text" placeholder="Latitude" id="lat"
				br
				input type="text" placeholder="Longitude" id="lng"
	.divider#wrapperImagens
		H Teste
css:
	.divider{
		background: #fff;
		width: 40%;
		padding: 1 2%;
		border-radius: 20px;
	}
	.divider-header{
		padding: 3%;
	}
	.divider-content{
		padding: 0 3%;	
	}
	.divider-content h5{
		margin-bottom: 5%;
	}
	.divider input[type="text"]{
		background: #f2f2f2;
		padding: 2% 4%;
		border: none;
		border-radius: 10px;
		margin-bottom: 3%;
		width: 100%;
	}
	.divider input[type="submit"]{
		color: white;
		padding: 2% 4%;
		border: none;
		border-radius: 10px;
		margin-bottom: 3%;
		width: 100%;
	}
	.content{
		width: 76%;
		position: absolute;
		height: 100%;
		left: 22%;
		right: 2%;
		z-index: 9;
		/*background: #555;*/
		margin-top: 10px;
		padding: 0;
	}
	.dados-gym{
		height: 500px;
	}
	.dados-gym input{
		border: none;
		background: transparent !important;
	}
	.dados-gym-input-selected{
		border-bottom: 1px solid #ccc !important;
	}

javascript:
    $(document).ready(function(){
		// Inicializa a classe gym
		let gym = new Gym("#{@gym.nome}", "#{@gym.cnpj}", "#{@gym.razao_social}", "#{@gym.id}");
		console.log(gym)
		// Inicializa os estados das divs
		gym.componentLoaded()
		// Swicth dos estados das divs
		$("#dados-toggler").click(function(event) {
			event.preventDefault();
			gym.exibirWrapperDados();
		})
		$("#endereco-toggler").click(function(event) {
			event.preventDefault();
			gym.exibirWrapperEndereco();
		})
		$("#imagens-toggler").click(function(event) {
			event.preventDefault();
			gym.exibirWrapperImagens();
		})		
		// Input com nome
		$("#gym-nome").change(function() {
			response = gym.mudarNome($("#gym-nome").val())
			console.log(response)
		})
		// Input com CNPJ
		$("#cnpj").change(function() {
			response = gym.mudarCnpj($("#cnpj").val())
			console.log(response)
		})
		// Input com Razao Social
		$("#razao-social").change(function() {
			response = gym.mudarRazaoSocial($("#razao-social").val())
			console.log(response)
		})
    })
