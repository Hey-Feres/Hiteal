	.border{border: 3px solid #000 !important}
	.divider{
		background: #fff;
		padding: 1 2%;
		border-radius: 20px;
	}
	.divider-header{
		padding: 3%;
	}
	.divider-content{
		padding: 0 3%;	
	}
	.divider-content h5{
		margin-bottom: 5%;
	}
	.content{
		width: 76%;
		position: absolute;
		height: 100%;
		left: 22%;
		right: 2%;
		z-index: 9;
		/*background: #555;*/
		margin-top: 10px;
		padding: 0;
	}
	.dados-gym, .endereco-gym{
		position: absolute;
		height: 90%;
		width: 100%;
	}

javascript:
    $(document).ready(function(){
		// Inicializa a classe gym
		let gym = new Gym("#{@gym.nome}", "#{@gym.cnpj}", "#{@gym.razao_social}", "#{@gym.id}");
		console.log(gym)
		// Inicializa os estados das divs
		gym.componentLoaded()
		// Swicth dos estados das divs
		$("#dados-toggler").click(function(event) {
			event.preventDefault();
			gym.exibirWrapperDados();
		})
		$("#endereco-toggler").click(function(event) {
			event.preventDefault();
			gym.exibirWrapperEndereco();
		})
		$("#imagens-toggler").click(function(event) {
			event.preventDefault();
			gym.exibirWrapperImagens();
		})		
		// Input com nome
		$("#gym-nome").change(function() {
			response = gym.mudarNome($("#gym-nome").val())
			console.log(response)
		})
		// Input com CNPJ
		$("#cnpj").change(function() {
			response = gym.mudarCnpj($("#cnpj").val())
			console.log(response)
		})
		// Input com Razao Social
		$("#razao-social").change(function() {
			response = gym.mudarRazaoSocial($("#razao-social").val())
			console.log(response)
		})
		// Input com CEP
		$("#cep").change(function() {
			response = gym.mudarCep($("#cep").val())
			console.log(response)
		})
		// Input com Cidade
		$("#cidade").change(function() {
			response = gym.mudarCidade($("#cidade").val())
			console.log(response)
		})
		// Input com Estado
		$("#estado").change(function() {
			response = gym.mudarEstado($("#estado").val())
			console.log(response)
		})
		// Input com Numero
		$("#numero").change(function() {
			response = gym.mudarNumero($("#numero").val())
			console.log(response)
		})
		// Input com Latitude
		$("#latitude").change(function() {
			response = gym.mudarLatitude($("#latitude").val())
			console.log(response)
		})
		// Input com Longitude
		$("#longitude").change(function() {
			response = gym.mudarLongitude($("#longitude").val())
			console.log(response)
		})
    })
